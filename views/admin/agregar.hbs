<div class="conteiner" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="from-group">
                    <input type="text" class="form-control" placeholder="titulo" name="titulo">
                </div>

                <div class="from-group">
                    <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitulo"></textarea>
                <div class="from-group">
                    <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>
                </div>
                 <div class="from-group">
                     <label>Imagen: <input type="file" name="imagen" id="imagen"> </label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>

            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}