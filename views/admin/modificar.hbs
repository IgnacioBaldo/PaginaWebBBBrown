<div class="conteiner" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">

                <div class="from-group">
                    <input type="text" class="form-control" placeholder="titulo" value="{{novedad.titulo}}" name="titulo">
                </div>

                <div class="from-group">
                    <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                <div class="from-group">
                    <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>

            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}